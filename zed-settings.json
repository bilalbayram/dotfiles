{
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Tokyo Night"
  },
  "buffer_font_family": "TX-02",
  "buffer_font_size": 14,
  "soft_wrap": "editor_width",
  "show_whitespaces": "boundary",
  "tab_size": 2,
  "hard_tabs": false,
  "format_on_save": "on",
  "formatter": "auto",
  "auto_indent_on_paste": true,
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "enabled": true
    }
  },
  "project_panel": {
    "auto_reveal_entries": true,
    "auto_fold_dirs": false
  },
  "file_scan_exclusions": [
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.git"
  ],
  "outline_panel": {
    "dock": "left"
  },
  "collaboration_panel": {
    "dock": "left"
  },
  "notification_panel": {
    "dock": "right"
  },
  "chat_panel": {
    "dock": "right"
  },
  "assistant": {
    "button": false,
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "preview_tabs": {
    "enabled": false
  },
  "terminal": {
    "shell": {
      "program": "fish"
    },
    "font_family": "TX-02",
    "font_size": 14
  },
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "include_ignored": false,
    "regex": false
  },
  "project_search": {
    "search_in_new_pane": false
  }
}
